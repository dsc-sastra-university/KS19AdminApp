<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "NoActionBar" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sniglet</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="success_toast">
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#4BB543</item>
        <item name="stSolidBackground">true</item>
    </style>

    <style name="success_toast_bold" parent="success_toast">
        <item name="stTextBold">true</item>
    </style>

    <style name="blue_toast">
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#659BEB</item>
        <item name="stSolidBackground">true</item>
    </style>

    <style name="red_toast">
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#FF5E64</item>
        <item name="stSolidBackground">true</item>
    </style>

</resources>
